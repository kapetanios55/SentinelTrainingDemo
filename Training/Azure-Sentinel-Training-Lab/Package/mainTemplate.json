{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "minLength": 1,
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Not used, but needed to pass arm-ttk test `Location-Should-Not-Be-Hardcoded`.  We instead use the `workspace-location` which is derived from the LA workspace"
            }
        },
        "workspace-location": {
            "type": "string",
            "minLength": 1,
            "defaultValue": "[parameters('location')]",
            "metadata": {
                "description": "Region to deploy solution resources"
            }
        },
        "workspace": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "The workspace name should include 4-63 letters, digits or '-'. The '-' shouldn't be the first or the last symbol"
            }
        },
        "formattedTimeNow": {
            "type": "string",
            "defaultValue": "[utcNow('g')]",
            "metadata": {
                "description": "Appended to workbook displayNames to make them unique"
            }
        },
        "artifactsVersion": {
            "type": "string",
            "defaultValue": "[utcNow('yyyyMMddHHmmss')]",
            "metadata": {
                "description": "Cache-busting version for linked templates"
            }
        },
        "scheduleStartTime": {
            "type": "string",
            "defaultValue": "[dateTimeAdd(utcNow(), 'PT5M')]",
            "metadata": {
                "description": "UTC start time for the one-time ingestion schedule"
            }
        },
        "enableIngestion": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "Whether to run the ingestEvents deployment script. Disabled for tenants that block storage account key auth."
            }
        },
        "workbook1-name": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Name for the workbook"
            }
        },
        "playbook1-PlaybookName": {
            "defaultValue": "Get-GeoFromIpAndTagIncident",
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "Resource name for the logic app playbook.  No spaces are allowed"
            }
        }
    },
    "variables": {
        "_artifactsLocation": "https://raw.githubusercontent.com/kapetanios55/SentinelTrainingDemo/master/Training/Azure-Sentinel-Training-Lab/",
        "sourceId": "sentineltrainingdemo.azure-sentinel-training-lab",
        "_sourceId": "[variables('sourceId')]",
        "workbookContentId": "ATLInvestigationInsights",
        "_workbookContentId": "[variables('workbookContentId')]",
        "alertRuleContentId1": "ATLSolorigateNetworkBeacon",
        "_alertRuleContentId1": "[variables('alertRuleContentId1')]",
        "alertRuleContentId2": "ATLSign-insfromIPsthatattemptsign-instodisabledaccounts",
        "_alertRuleContentId2": "[variables('alertRuleContentId2')]",
        "alertRuleContentId3": "ATLMaliciousInboxRule",
        "_alertRuleContentId3": "[variables('alertRuleContentId3')]",
        "playbookContentId1": "ATLGet-GeoFromIpAndTagIncident",
        "_playbookContentId1": "[variables('playbookContentId1')]",
        "watchlistContentId1": "ATLHighRiskApps",
        "_watchlistContentId1": "[variables('watchlistContentId1')]",
        "huntingQueryContentId1": "ATLOAuthApplications",
        "_huntingQueryContentId1": "[variables('huntingQueryContentId1')]",
        "huntingQueryContentId2": "ATLsolorigateInventoryCheck",
        "_huntingQueryContentId2": "[variables('huntingQueryContentId2')]",
        "automationAccountName": "[concat('sentineltraining', uniqueString(resourceGroup().id))]"
    },
    "resources": [
        {
            "apiVersion": "2021-04-01",
            "name": "pid-176a034f-b9bf-4a4a-b1e3-059033b9b394-partnercenter",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "Inner"
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": []
                }
            }
        },
        {
            "name": "workspaceCreation",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(variables('_artifactsLocation'), concat('Artifacts/LinkedTemplates/workspace.json?v=', parameters('artifactsVersion')))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('workspace')]"
                    },
                    "pricingTier": {
                        "value": "PerGB2018"
                    },
                    "dataRetention": {
                        "value": 90
                    },
                    "location": {
                        "value": "[parameters('workspace-location')]"
                    }
                }
            }
        },
        {
            "name": "ingestEvents",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "condition": "[parameters('enableIngestion')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'workspaceCreation')]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "WorkspaceName": {
                            "type": "string",
                            "metadata": {
                                "description": "Log Analytics workspace name"
                            }
                        },
                        "scheduleStartTime": {
                            "type": "string",
                            "metadata": {
                                "description": "UTC start time for the one-time schedule"
                            }
                        }
                    },
                    "functions": [],
                    "variables": {
                        "automationAccountName": "[concat('sentineltraining', uniqueString(resourceGroup().id))]",
                        "runbookName": "IngestTrainingTelemetry",
                        "scheduleName": "IngestTrainingTelemetryOnce"
                    },
                    "resources": [
                        {
                            "type": "Microsoft.Automation/automationAccounts",
                            "apiVersion": "2019-06-01",
                            "name": "[variables('automationAccountName')]",
                            "location": "[resourceGroup().location]",
                            "identity": {
                                "type": "SystemAssigned"
                            },
                            "properties": {
                                "sku": {
                                    "name": "Basic"
                                }
                            }
                        },
                        {
                            "type": "Microsoft.Automation/automationAccounts/runbooks",
                            "apiVersion": "2019-06-01",
                            "name": "[concat(variables('automationAccountName'), '/', variables('runbookName'))]",
                            "location": "[resourceGroup().location]",
                            "dependsOn": [
                                "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
                            ],
                            "properties": {
                                "runbookType": "PowerShell",
                                "logProgress": true,
                                "logVerbose": true,
                                "publishContentLink": {
                                    "uri": "https://raw.githubusercontent.com/kapetanios55/SentinelTrainingDemo/master/Training/Azure-Sentinel-Training-Lab/Artifacts/Scripts/RunIngest.ps1"
                                }
                            }
                        },
                        {
                            "type": "Microsoft.Automation/automationAccounts/schedules",
                            "apiVersion": "2019-06-01",
                            "name": "[concat(variables('automationAccountName'), '/', variables('scheduleName'))]",
                            "dependsOn": [
                                "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
                            ],
                            "properties": {
                                "frequency": "OneTime",
                                "startTime": "[parameters('scheduleStartTime')]",
                                "timeZone": "UTC"
                            }
                        },
                        {
                            "type": "Microsoft.Automation/automationAccounts/jobSchedules",
                            "apiVersion": "2019-06-01",
                            "name": "[concat(variables('automationAccountName'), '/', guid(variables('automationAccountName'), variables('runbookName'), variables('scheduleName')))]",
                            "dependsOn": [
                                "[resourceId('Microsoft.Automation/automationAccounts/runbooks', variables('automationAccountName'), variables('runbookName'))]",
                                "[resourceId('Microsoft.Automation/automationAccounts/schedules', variables('automationAccountName'), variables('scheduleName'))]"
                            ],
                            "properties": {
                                "runbook": {
                                    "name": "[variables('runbookName')]"
                                },
                                "schedule": {
                                    "name": "[variables('scheduleName')]"
                                },
                                "parameters": {
                                    "SubscriptionId": "[subscription().subscriptionId]",
                                    "ResourceGroupName": "[resourceGroup().name]",
                                    "Location": "[resourceGroup().location]",
                                    "WorkspaceName": "[parameters('WorkspaceName')]"
                                }
                            }
                        }
                    ],
                    "outputs": {}
                },
                "parameters": {
                    "WorkspaceName": {
                        "value": "[parameters('workspace')]"
                    },
                    "scheduleStartTime": {
                        "value": "[parameters('scheduleStartTime')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2022-04-01",
            "name": "[guid(resourceGroup().id, variables('automationAccountName'), 'automation-monitoring-contrib')]",
            "condition": "[parameters('enableIngestion')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'ingestEvents')]"
            ],
            "properties": {
                "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', '749f88d5-cbae-40b8-bcfc-e573ddc772fa')]",
                "principalId": "[reference(resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName')), '2019-06-01', 'Full').identity.principalId]"
            }
        },
        {
            "name": "alertRules",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments','workbook')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(variables('_artifactsLocation'), concat('Artifacts/LinkedTemplates/alertRules.json?v=', parameters('artifactsVersion')))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('workspace')]"
                    }
                }
            }
        },
        {
            "name": "playbook",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments','workspaceCreation')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(variables('_artifactsLocation'), concat('Artifacts/LinkedTemplates/playbook.json?v=', parameters('artifactsVersion')))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "PlaybookName": {
                        "value": "[parameters('playbook1-PlaybookName')]"
                    }
                }
            }
        },
        {
            "name": "workbook",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments','ingestEvents')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(variables('_artifactsLocation'), concat('Artifacts/LinkedTemplates/workbook.json?v=', parameters('artifactsVersion')))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "workbookDisplayName": {
                        "value": "[concat(parameters('workbook1-name'),' - ',parameters('formattedTimeNow'))]"
                    },
                    "workbookSourceId": {
                        "value": "[reference('workspaceCreation').outputs.workspaceResourceIdOutput.value]"
                    }
                }
            }
        },
        {
            "name": "watchlist",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments','workspaceCreation')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(variables('_artifactsLocation'), concat('Artifacts/LinkedTemplates/watchlist.json?v=', parameters('artifactsVersion')))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "workspaceName": {
                       "value": "[parameters('workspace')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.OperationalInsights/workspaces/providers/metadata",
            "apiVersion": "2021-03-01-preview",
            "properties": {
                "version": "1.0.5",
                "kind": "Solution",
                "contentId": "[variables('_sourceId')]",
                "parentId": "[variables('_sourceId')]",
                "source": {
                    "kind": "Solution",
                    "name": "Sentinel Training Lab (Demo)",
                    "sourceId": "[variables('_sourceId')]"
                },
                "author": {
                    "name": "akapetaniou@microsoft.com",
                    "email": "akapetaniou@microsoft.com"
                },
                "support": {
                    "tier": "Community",
                    "email": "support@microsoft.com",
                    "name": "SentinelTrainingDemo",
                    "link": "https://github.com/kapetanios55/SentinelTrainingDemo"
                },
                "dependencies": {
                    "operator": "AND",
                    "criteria": [
                        {
                            "kind": "Workbook",
                            "contentId": "[variables('_workbookContentId')]",
                            "version": "1.0.5"
                        },
                        {
                            "kind": "AnalyticsRule",
                            "contentId": "[variables('_alertRuleContentId1')]",
                            "version": "1.0.5"
                        },
                        {
                            "kind": "AnalyticsRule",
                            "contentId": "[variables('_alertRuleContentId2')]",
                            "version": "1.0.5"
                        },
                        {
                            "kind": "AnalyticsRule",
                            "contentId": "[variables('_alertRuleContentId3')]",
                            "version": "1.0.5"
                        },
                        {
                            "kind": "Playbook",
                            "contentId": "[variables('_playbookContentId1')]",
                            "version": "1.0.5"
                        },
                        {
                            "kind": "Watchlist",
                            "contentId": "[variables('_watchlistContentId1')]",
                            "version": "1.0.5"
                        },
                        {
                            "kind": "HuntingQuery",
                            "contentId": "[variables('_huntingQueryContentId1')]",
                            "version": "1.0.5"
                        },
                        {
                            "kind": "HuntingQuery",
                            "contentId": "[variables('_huntingQueryContentId2')]",
                            "version": "1.0.5"
                        }
                    ]
                },
                "providers": [
                    "Microsoft"
                ],
                "categories": {
                    "domains": [ "Training and Tutorials" ]
                }
            },
            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/', variables('_sourceId'))]"
        }
    ],
    "outputs": {
    }
}
